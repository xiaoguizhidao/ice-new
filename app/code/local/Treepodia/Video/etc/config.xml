<?xml version="1.0"?>
<config>
	<modules>
		<Treepodia_Video>
			<version>1.2.4</version>
        </Treepodia_Video>
	</modules>
	<frontend>
		<routers>
          <video>
              <use>standard</use>
              <args>
                 <module>Treepodia_Video</module>
                 <frontName>treepodia</frontName>
              </args>
           </video>
       </routers>
    </frontend>
	<admin>
		 <routers>
			 <video>
				<use>admin</use>
				<args>
				   <module>Treepodia_Video</module>
				   <frontName>treepodia_video</frontName>
				</args>
			 </video>
		  </routers>
	</admin>
	<adminhtml>
		<layout>
			<updates>
				<video>
					<file>treepodia_video.xml</file>
				</video>
			</updates>
		</layout>
		<menu>
			<video translate="title" module="adminhtml">
				<title>Treepodia</title>
				<sort_order>90</sort_order>
				<children>
					<export translate="title">
						<title>Info &amp; Links</title>
						<sort_order>10</sort_order>
						<action>treepodia_video/adminhtml_export</action>
					</export>
					<configuration translate="title">
						<title>Configuration</title>
						<sort_order>20</sort_order>
						<action>treepodia_video/adminhtml_configuration</action>
					</configuration>
					<settings translate="title">
						<title>Setting</title>
						<sort_order>30</sort_order>
						<action>adminhtml/system_config/edit/section/video</action>
					</settings>
				</children>
			</video>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<video translate="title">
											<title>Treepodia - All</title>
										</video>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
	</adminhtml>
	<global>
		<blocks>
			<video>
				<class>Treepodia_Video_Block</class>
			</video>
		</blocks>
		<resources>
			<video_setup>
				<setup>
					<module>Treepodia_Video</module>
					<class>Mage_Eav_Model_Entity_Setup</class>
				</setup>
				<connection>
				  <use>core_setup</use>
			  </connection>
			</video_setup>
            <video_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </video_write>
            <video_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </video_read>
		</resources>
	</global>
</config>