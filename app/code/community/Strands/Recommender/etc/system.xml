<?xml version="1.0"?>
<config>
	<sections>
		<recommender translate="label" module="recommender">
			<label>Strands Recommender</label>
			<class>strands_recommender-section</class>
			<header_css>strands_recommender-header</header_css>			
			<tab>sales</tab>
			<frontend_type>text</frontend_type>
            <sort_order>999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
			<!-- Account credentials: Enable, API ID, Token and place user to open Strands Recommender account (see Feasible Block)-->
			<groups>
				<account translate="label" module="recommender">
					<label>Account Credentials</label>
					<frontend_type>text</frontend_type>
					<expanded>1</expanded>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					<fields>
						<new>
							<label>New</label>
                            <frontend_type>text</frontend_type>
                   			<frontend_model>recommender/adminhtml_system_config_fieldset_feasible</frontend_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</new>
						<active>
							<label>Enable</label>
							<comment><![CDATA[Set to Yes to activate the Strands Recommender module]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</active>
						<log>
							<label>Log Api Calls</label>
							<comment><![CDATA[Do no select yes unless instructed to by Strands Recommender Client Services]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>0</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
						</log>
						<strands_api_id translate="label,comment">
                            <label>Strands Recommender Customer API ID *</label>
                            <comment><![CDATA[Strands API ID provided by Strands Recommender in the registration email]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </strands_api_id>
						<strands_customer_token translate="label,comment">
                            <label>Strands Recommender Customer Validation Token *</label>
                            <comment><![CDATA[Strands Customer Validation Token provided by Strands Recommender in the registration email]]></comment>
                            <frontend_type>text</frontend_type>
                            <default>patata</default>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </strands_customer_token>                        
					</fields>
				</account>
			</groups>
			<groups>
				<widgets translate="label" module="recommender">
					<label>Recommendation Widgets Settings</label>
					<frontend_type>text</frontend_type>
					<frontend_model>recommender/adminhtml_system_config_fieldset_widgets</frontend_model>
					<expanded>0</expanded>
					<sort_order>200</sort_order>
					<show_in_default>0</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
					<fields>
						<explanation>
							<label>Explanation</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</explanation>
						<automatic>
							<label>Automatic insertion of widgets</label>
							<comment><![CDATA[Check this if you want to automatically insert widgets in your site.]]></comment>
                            <frontend_type>checkbox</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</automatic>
					</fields>
				</widgets>
			</groups>
			<!-- Catalog Extra Fields: Manage Stock-->
			<groups>
				<catalog-extra-fields translate="label" module="recommender">
					<label>Catalog Extra Fields</label>
					<frontend_type>text</frontend_type>
					<expanded>0</expanded>
					<sort_order>201</sort_order>
					<show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					<fields>
						<manage_stock>
							<label>Manage Stock</label>
							<comment><![CDATA[If set to Yes your catalog will include the following new fields on the Strands side: <b>manage_stock</b> informing of whether the item's stock is managed by you and <b>stock_qty</b> with up to date stock counts for each item. Please note that adding these fields will require extra lookups when synchronizing the catalog, causing some extra consumption of resources in your server.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>                          
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</manage_stock>
					</fields>
				</catalog-extra-fields>
			</groups>
			<!-- Tracking behavior: tracking via javascript-->
			<groups>
				<tracking translate="label" module="recommender">
					<label>Tracking Behavior</label>
					<frontend_type>text</frontend_type>
					<expanded>0</expanded>
					<sort_order>202</sort_order>
					<show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					<fields>
						<js_tracking>
							<label>Tracking via JavaScript</label>
							<comment><![CDATA[Set to Yes only in case you are using the Enterprise Edition and the Full Page Caching or if you are experiencing problems with tracking.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>                          
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</js_tracking>
					</fields>
				</tracking>
			</groups>
			
			<groups>
				<userlogged translate="label" module="recommender">
					<label>Userlogged Event</label>
					<frontend_type>text</frontend_type>
					<expanded>0</expanded>
					<sort_order>203</sort_order>
					<show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					<fields>
						<email_userid>
							<label>Use e-mail address as user ID</label>
							<comment><![CDATA[If set to Yes you will provide Strands Recommender the email addresses of any user logged in your system. Strands recommender will use this data to index user profiles for recommendations. If set to No, Magento's own user ID will be used instead.  ]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>                          
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</email_userid>
						<via_js>
							<label>Use JS to send "userlogged" event</label>
							<comment><![CDATA[Set to "No" if you are experiencing problems with the "userlogged" event. In that case, "userlogged" event would be sent through API. ]]></comment>
