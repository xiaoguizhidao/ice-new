							<label>Package</label>
							<comment><![CDATA[Enter here your current Package Name. It can be found in the Magento Dashboard under System > Configuration > General > Design > Package]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
