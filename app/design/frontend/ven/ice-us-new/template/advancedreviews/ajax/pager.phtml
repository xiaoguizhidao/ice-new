?><?php if($this->getCollection()->getSize()): ?>
    <?php if (Mage::helper('advancedreviews')->checkVersion('1.4.0.0')): ?>
        <?php if($this->getUseContainer()): ?>
        <div class="pager">
        <?php endif ?>

        <?php if($this->getLastPageNum()>1): ?>
        <div class="pages">
            <strong><?php echo $this->__('Page:') ?></strong>
            <ol>
            <?php if (!$this->isFirstPage()): ?>
                <li>
                    <a onclick="updatePagerPage('<?php echo $this->getPreviousPageUrl() ?>')" name="page<?php echo $this->getPreviousPageUrl()?>" href="#page<?php echo $this->getPreviousPageUrl()?>" title="<?php echo $this->__('Previous') ?>">
                        <?php if(!$this->getAnchorTextForPrevious()): ?>
                            <img src="<?php echo $this->getSkinUrl('images/i_pager-prev.gif') ?>" alt="<?php echo $this->__('Previous') ?>" class="v-middle" />
                        <?php else: ?>
                            <?php echo $this->getAnchorTextForPrevious() ?>
                        <?php endif;?>
                    </a>
                </li>
            <?php endif;?>

            <?php if ($this->canShowFirst()): ?>
                <li><a class="first" onclick="updatePagerPage('<?php echo $this->getFirstPageUrl() ?>')" name="page<?php echo $this->getFirstPageUrl()?>" href="#page<?php echo $this->getFirstPageUrl()?>">1</a></li>
            <?php endif;?>

            <?php if ($this->canShowPreviousJump()): ?>
                <li><a class="previous_jump" title="" onclick="updatePagerPage('<?php echo $this->getPreviousJumpUrl() ?>')" name="page<?php echo $this->getPreviousJumpUrl()?>" href="#page<?php echo $this->getPreviousJumpUrl()?>">...</a></li>
            <?php endif;?>

            <?php foreach ($this->getFramePages() as $_page): ?>
                <?php if ($this->isPageCurrent($_page)): ?>
                    <li class="current"><?php echo $_page ?></li>
                <?php else: ?>
                    <li><a onclick="updatePagerPage('<?php echo $_page ?>')" name="page<?php echo $_page?>" href="#page<?php echo $_page?>"><?php echo $_page?></a></li>
                <?php endif;?>
            <?php endforeach;?>


            <?php if ($this->canShowNextJump()): ?>
                <li><a class="next_jump" title="" onclick="updatePagerPage('<?php echo $this->getNextJumpUrl() ?>')" name="page<?php echo $this->getNextJumpUrl()?>" href="#page<?php echo $this->getNextJumpUrl()?>">...</a></li>
            <?php endif;?>

            <?php if ($this->canShowLast()): ?>
              <li><a class="last" onclick="updatePagerPage('<?php echo $this->getLastPageUrl() ?>')" name="page<?php echo $this->getLastPageUrl()?>" href="#page<?php echo $this->getLastPageUrl()?>"><?php echo $this->getLastPageNum() ?></a></li>
            <?php endif;?>

            <?php if (!$this->isLastPage()): ?>
                <li>
                    <a class="next" onclick="updatePagerPage('<?php echo $this->getNextPageUrl() ?>')" name="page<?php echo $this->getNextPageUrl()?>" href="#page<?php echo $this->getNextPageUrl()?>" title="<?php echo $this->__('Next') ?>">
                        <?php if(!$this->getAnchorTextForNext()): ?>
                            <img src="<?php echo $this->getSkinUrl('images/i_pager-next.gif') ?>" alt="<?php echo $this->__('Next') ?>" class="v-middle" />
                        <?php else: ?>
                            <?php echo $this->getAnchorTextForNext() ?>
                        <?php endif;?>
                    </a>
                </li>
            <?php endif;?>
            </ol>

        </div>
        <?php endif; ?>
        <?php if($this->getShowAmounts()): ?>
        <p class="amount">
            <?php if($this->getLastPageNum()>1): ?>
                <strong><?php echo $this->__('Items %s to %s of %s total', $this->getFirstNum(), $this->getLastNum(), $this->getTotalNum()) ?></strong>
            <?php else: ?>
                <strong><?php echo $this->__('%s Item(s)', $this->getTotalNum()) ?></strong>
            <?php endif; ?>
        </p>
        <?php endif ?>

        <?php if($this->getShowPerPage()): ?>
        <div class="limiter">
            <label><?php echo $this->__('Show') ?></label>
            <select onchange="updatePagerLimit(this.value)">
            <?php foreach ($this->getAvailableLimit() as  $_key=>$_limit): ?>
                <option value="<?php echo $_limit?>"<?php if($this->isLimitCurrent($_key)): ?> selected="selected"<?php endif ?>>
                    <?php echo $_limit ?>
                </option>
            <?php endforeach; ?>
            </select> <?php echo $this->__('per page') ?>
        </div>
        <?php endif ?>

        <?php if($this->getUseContainer()): ?>
        </div>
        <?php endif ?>
    <?php else: ?>
        <table class="pager" cellspacing="0">
            <tr>
                <td>
                <?php if($this->getLastPageNum()>1): ?>
                    <?php echo $this->__('Items %s to %s of %s total', $this->getFirstNum(), $this->getLastNum(), $this->getTotalNum()) ?>
                <?php else: ?>
                    <strong><?php echo $this->__('%s Item(s)', $this->getTotalNum()) ?></strong>
                <?php endif; ?>
                </td>
                <?php if($this->getLastPageNum()>1): ?>
                <td class="pages">
                    <strong><?php echo $this->__('Page:') ?></strong>
                    <ol>
                    <?php if (!$this->isFirstPage()): ?>
                        <li><a onclick="updatePagerPage('<?php echo $this->getPreviousPageUrl() ?>')" name="page<?php echo $this->getPreviousPageUrl()?>" href="#page<?php echo $this->getPreviousPageUrl()?>" title="<?php echo $this->__('Previous') ?>"> <img src="<?php echo $this->getSkinUrl('images/pager_arrow_left.gif') ?>" alt="<?php echo $this->__('Previous Page') ?>" /></a></li>
                    <?php endif ?>
                    <?php foreach ($this->getPages() as $_page): ?>
                        <?php if ($this->isPageCurrent($_page)): ?>
                            <li><span class="on"><?php echo $_page ?></span></li>
                        <?php else: ?>
                            <li><a onclick="updatePagerPage('<?php echo $_page ?>')" name="page<?php echo $_page?>" href="#page<?php echo $_page?>"><?php echo $_page ?></a></li>
                        <?php endif ?>
                    <?php endforeach;; ?>
                    <?php if (!$this->isLastPage()): ?>
                        <li><a class="next" onclick="updatePagerPage('<?php echo $this->getNextPageUrl() ?>')" name="page<?php echo $this->getNextPageUrl()?>" href="#page<?php echo $this->getNextPageUrl()?>" title="<?php echo $this->__('Next') ?>"><img src="<?php echo $this->getSkinUrl('images/pager_arrow_right.gif') ?>" alt="<?php echo $this->__('Next Page') ?>"/></a></li>
                    <?php endif ?>
                    </ol>
                </td>
                <?php endif; ?>
                <?php if($this->getShowPerPage()): ?>
                <td class="a-right">
                    <?php echo $this->__('Show') ?> <select onchange="updatePagerLimit(this.value)">
                    <?php foreach ($this->getAvailableLimit() as  $_key=>$_limit): ?>
                        <option value="<?php echo $_limit?>"<?php if($this->isLimitCurrent($_key)): ?> selected="selected"<?php endif ?>>
                            <?php echo $_limit ?>
                        </option>
                    <?php endforeach; ?>
                    </select> <?php echo $this->__('per page') ?>
                </td>
                <?php endif ?>
            </tr>
        </table>
    <?php endif ?>
<?php endif ?>