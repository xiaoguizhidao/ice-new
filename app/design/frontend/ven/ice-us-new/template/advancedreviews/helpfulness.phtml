        <div style="text-align: right;">
            (<strong><?php echo $this->getYesCount() ?></strong><?php echo $this->__(' of ') ?><strong><?php echo $this->getAllCount() ?></strong><?php echo $this->__(' people found this review helpful') ?>)
        </div>
    <?php endif ?>
