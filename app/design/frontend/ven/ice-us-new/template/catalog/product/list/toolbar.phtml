/**
 * Product list toolbar
 *
 * @see Mage_Catalog_Block_Product_List_Toolbar
 */
?>
<?php if($this->getCollection()->getSize()): ?>
<div class="toolbar">
    <div class="pager limiter-pager">
        <div class="limiter pages">
            <ol class="limit">
                <li>
                    <strong><?php echo $this->__("Items Per Page") ?>:</strong>
                </li>
                <?php foreach ($this->getAvailableLimit() as  $_key=>$_limit): ?>
                    <li <?php if($this->isLimitCurrent($_key)): ?>class="current"<?php endif; ?>>
                        <?php if($this->isLimitCurrent($_key)): ?>
                            <?php echo $_limit ?>
                        <?php else: ?>
                            <a href="<?php echo $this->getLimitUrl($_key) ?>"><?php echo $_limit ?></a>
                        <?php endif; ?>
                    </li>
                <?php endforeach; ?>
            </ol>
        </div>
    </div>
    <div class="pager">
        <div class="amount">
            <strong><?php echo $this->getTotalNum() ?></strong> <?php echo $this->__('Results'); ?>
        </div>

        <?php if( $this->isExpanded() ): ?>
        <div class="sorter">
            <div class="sort-by">
                <strong><?php echo $this->__('Sort By') ?>:</strong>
                <?php foreach($this->getAvailableOrders() as $_key=>$_order): ?>
                    <?php $newDirection = ($this->getCurrentDirection() == 'desc') ? 'asc' : 'desc'; ?>
                <span>
                    <a href="<?php echo $this->getOrderUrl($_key, $newDirection) ?>" <?php if($this->isOrderCurrent($_key)): ?>class="selected"<?php endif; ?>>
                        <?php echo $this->__($_order); ?>
                    </a>
                    <?php if($this->getCurrentDirection() == 'desc'): ?>
                    <img src="<?php echo $this->getSkinUrl('images/i_desc_arrow.gif') ?>" alt="<?php echo $this->__('Set Ascending Direction') ?>" class="v-middle" />
                    <?php else: ?>
                    <img src="<?php echo $this->getSkinUrl('images/i_asc_arrow.gif') ?>" alt="<?php echo $this->__('Set Descending Direction') ?>" class="v-middle" />
                    <?php endif; ?>
                </span>
                <?php endforeach; ?>
            </div>
        </div>
        <?php endif; ?>
        <?php echo $this->getPagerHtml() ?>
    </div>
</div>
<?php endif ?>
