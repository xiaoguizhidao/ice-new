<?xml version="1.0"?>
<layout version="0.1.0">

    <ven_content_sitemap_index>
        <label>VEN Content Sitemap</label>

        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>

        <reference name="head">
            <action method="addCss"><stylesheet>css/ven_content.css</stylesheet></action>
        </reference>

        <reference name="content">
            <block type="ven_content/sitemap" template="ven_content/sitemap.phtml"/>
        </reference>

        <reference name="right">
            <block type="tag/popular" name="tags_popular" template="tag/popular.phtml"/>
        </reference>

    </ven_content_sitemap_index>

</layout>
